<%- include("boilerplate") %>

    <div class="create-page">
        <h1>Create Post</h1>

        <form action="/posts/create" method="post">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" placeholder="Post Title" required>

            <label for="content">Content</label>
            <textarea id="content" name="content" rows="7" placeholder="Post Content" required></textarea>

            <label for="category">Category</label>
            <input type="text" id="category" name="category" placeholder="Post Category" required>

            <button class="create-btn" type="submit">Create Post</button>
        </form>
    </div>