<%- include("boilerplate") %>

    <div class="edit-page">
        <h1>Edit Post</h1>

        <form action="/posts/<%= post.id %>?_method=PUT" method="post">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= post.title %>" required />

            <label for="content">Content</label>
            <textarea id="content" name="content" rows="5" required><%= post.content %></textarea>

            <label for="category">Category</label>
            <input type="text" id="category" name="category" value="<%= post.category %>" required />

            <button class="update-btn">Update Post</button>
        </form>
    </div>