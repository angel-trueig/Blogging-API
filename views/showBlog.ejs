<%- include("boilerplate") %>

    <div class="post-detail-container">
        <h1 class="post-title">
            <%= post.title %>
        </h1>
        <p class="post-content">
            <%= post.content %>
        </p>
        <p class="post-category">Category: <%= post.category %>
        </p>


        <div class="action-buttons">
            <a href="#" class="action like-btn">
                <i class="fa-regular fa-heart fa-2x"></i>
                <span class="like-count">Like</span>
            </a>
            <a href="#" class="action">
                <i class="fa-regular fa-comment fa-2x"></i>
                <span>Comment</span>
            </a>
        </div>

    </div>